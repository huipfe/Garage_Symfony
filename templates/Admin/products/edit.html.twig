{% extends './base.html.twig' %}

{% block title %}Panel d'administration - Modification Produits{% endblock %}

{% block body %}

    <main class="container">

        <section class="row">
            <div class="col-12">

                <div class="justify-content-start">
                    <a href="{{ path('products_index') }}" class="text-decoration-none">
                    <span>
                        <button class="btn btn-danger mb-3">
                            <i class="bi bi-arrow-left"></i>
                            Retour Ã  la liste
                        </button>
                    </span>
                    </a>
                </div>

                {% if product.categories.parent.name == 'Services' %}
                <h1>Modifier un service : {{ product.name }}</h1>
                {% else %}
                <h1>Modifier une voiture : {{ product.name }}</h1>
                {% endif %}

                {% include "admin/products/_form_edit.html.twig" with {'button_label': 'Modifier'} %}
            </div>
        </section>
    </main>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/JS/images.js') }}" defer></script>
{% endblock %}
