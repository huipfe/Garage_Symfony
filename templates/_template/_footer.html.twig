<footer id="footer">
    <div class="container-fluid">
        <div class="row p-3">
            <div class="col-md-3">

                <h4>Nos horaires</h4>
                <p>Horaires d'ouverture et de fermeture :</p>

                {% if horaires is not empty %}
                    <ul class="pb-3 list-unstyled">
                        {% for horaire in horaires %}
                            <li class="mt-4">{{ horaire.jour }} : {{ horaire.heureDebut }} / {{ horaire.heureFin }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucun horaire disponible.</p>
                {% endif %}


            </div>
            <div class="col-md-3">
                <h4>Liens rapides</h4>
                <a href="#" class="text-decoration-none link-light">
                    <p>FAQ</p>
                </a>
                <a href="#" class="text-decoration-none link-light">
                    <p>Politique de confidentialité</p>
                </a>
                <a href="#" class="text-decoration-none link-light">
                    <p>Conditions d’utilisations</p>
                </a>

            </div>

            <div class="col-md-3">
                <h4>Nos services & expertises</h4>

                {% set categories = get_categories() %}

                <a href="{{ path('categories_list', {'slug': categories[5].slug}) }}" class="text-decoration-none link-light">
                    <p>{{ categories[5].name }}</p>
                </a>
                <a href="{{ path('categories_list', {'slug': categories[6].slug}) }}" class="text-decoration-none link-light">
                    <p>{{ categories[6].name }}</p>
                </a>
                <a href="{{ path('categories_list', {'slug': categories[7].slug}) }}" class="text-decoration-none link-light">
                    <p>{{ categories[7].name }}</p>
                </a>
            </div>

