            <div class="col-md-3">
                <h4>Contact</h4>

                {% set garageInfo = get_garage_info() %}
                <p><i class="bi bi-geo-alt-fill"></i> {{ garageInfo.address}}</p>
                <p><i class="bi bi-telephone-fill"></i> {{ garageInfo.phoneNumber }}</p>
                <p><i class="bi bi-envelope-fill"></i> {{ garageInfo.email }}</p>

                <h4>Suivez nous sur :</h4>
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="#"><i
                                    class="bi bi-whatsapp link-light fs-1"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i
                                    class="bi bi-facebook link-light fs-1"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i
                                    class="bi bi-instagram link-light fs-1"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i
                                    class="bi bi-twitter link-light fs-1"></i></a></li>
                </ul>
            </div>
</footer>

